{
  "manifest_version": 3,
  "name": "huasengheng-tracker",
  "version": "0.0.1",
  "background": {
    "service_worker": "./src/service-workers/huasengheng.worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.huasengheng.com/*"],
      "css": ["src/content-scripts/huasengheng/huasengheng.css"],
      "js": ["src/content-scripts/huasengheng/huasengheng.ts"]
    },
    {
      "matches": [
        "https://s.tradingview.com/widgetembed/*",
        "https://www.tradingview.com/chart/*"
      ],
      "js": ["src/content-scripts/tradingview/trading-view.ts"],
      "css": ["src/content-scripts/tradingview/trading-view.css"]
    }
  ],
  "action": {
    "default_icon": "./assets/icons/icon16_16.png"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
